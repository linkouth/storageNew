<!DOCTYPE html>
<html>

{% block stylesheet %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        a.navbar-brand {
            margin-right: 70px;
        }
    </style>
{% endblock %}

{% block navigation %}
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('homepage') }}">Склад</a>
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarCollapse"></button>
        <div class="navbar-collapse collapse" id="navbarCollapse" style>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('good_index') }}">Товары</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('loader_index') }}">Грузчики</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('foreman_index') }}">Прорабы</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('shift_index') }}">Смены</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_index') }}">Администратор</a>
                </li>
                {% if not is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">Личный кабинет</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('logout') }}">Выйти</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
{% endblock %}

<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
